<h1 class='text-center'>Change password</h1>
<div class="row">
  <div class="col-md-4 offset-4">
      <%= form_for @user, url:  {action: :update_password} do |form| %>
      <%= form.password_field :password_digest, hide_label: true, placeholder:"Enter your Old Password", class: 'mb-1 form-control' %>
      <%= form.password_field :password, hide_label: true, placeholder: "Enter a New Password", class: "mb-1 form-control" %>
      <%= form.password_field :password_confirmation, hide_label: true, placeholder: "Confirm New Password", class: "mb-1 form-control"%>
      <%= form.submit "Change Password", :class=> "btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-sm-2"></div>
  </div>
</div>
